{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,

    
    "module": "esnext",
    "moduleResolution": "node",

    
    "baseUrl": ".",                  
    "paths": { "@/*": ["./*"] },

    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",            
      "moduleResolution": "node",       
      "baseUrl": ".",                   
      "paths": { "@/*": ["./*"] }
    }
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
